{% extends "../../partials/layout.njk" %}
{% from "components/card.njk" import card %}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}

{% set pageTitle = applicationName + " - Home" %}
{% set title = "Contacts" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}
<div class="govuk-grid-row govuk-!-static-margin-bottom-5">
  <div class="govuk-grid-column-full">
      {{ govukBreadcrumbs({
      items: [
          {
            text: "Digital Prison Services",
            href: DPS_HOME_PAGE_URL
          }
      ]
      }) }}
  </div>
</div>

<h1 class="govuk-heading-l">{{ title }}</h1>
<div class="card-group govuk-grid-row">
  <div class="govuk-grid-column-one-third card-group__item">
      {{ card({
          "href": "/search/prisoner",
          "clickable": "true",
          "heading": "Manage contacts",
          "description": "Manage the social contacts for a prisoner",
          "data-qa": "manage-contacts-card"
      }) }}
  </div>

  <div class="govuk-grid-column-one-third card-group__item">
      {{ card({
          "href": "#",
          "clickable": "true",
          "heading": "Manage contact restrictions",
          "description": "Manage restrictions for prisoner contacts",
          "data-qa": "manage-restrictions-card"
      }) }}
  </div>
</div>

{% endblock %}
{% block pageScripts %}
    <script src="/js/card.js"></script>
{% endblock %}
