{% extends "../../partials/layout.njk" %}
{% set mainClasses = "govuk-main-wrapper--l" %}

{% set title =  'Sorry, there is a problem with the service' %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{ title }}</h1>
      <p class="govuk-body">The problem has been reported to the service team.</p>
      <p class="govuk-body">Try again later.</p>
      <h2 class="govuk-heading-l">Get help</h2>
      <p class="govuk-body">Contact the helpdesk on 0800 917 5148 or #6598 from inside an establishment.</p>
      <p class="govuk-body"><a class="govuk-link--no-visited-state" href="{{DPS_HOME_PAGE_URL}}">Go to digital services home page</a></p>
      <pre>{{ stack }}</pre>
    </div>
  </div>
{% endblock %}