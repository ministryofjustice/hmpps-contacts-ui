{% extends "../partials/layout.njk" %}
{% set mainClasses = "govuk-main-wrapper--l" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}

{% set title =  'This prisoner is not in your caseload' %}
{% set url = DPS_HOME_PAGE_URL %}

 {% block beforeContent %}
   {{ govukBreadcrumbs({
     items: [
       {  text: "Digital Prison Services", href: url },
       { text: title }
     ]
   }) }}
 {% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">{{ title }}</h1>
      <p class="govuk-body">
        You will be returned to the DPS home page to start again.
      </p>
      <p class="govuk-body">
        {{ govukButton({
          text: "Continue",
          href: url
        }) }}
      </p>
    </div>
  </div>
{% endblock %}