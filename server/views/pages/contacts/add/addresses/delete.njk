{% extends "partials/layout.njk" %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "partials/miniProfile/macro.njk" import miniProfile %}
{% from "partials/contactMethods/contactAddressCard.njk" import contactAddressCard %}

{% set caption = 'Add a contact and link to a prisoner' %}
{% set title = "Are you sure you want to delete this address?" %}
{% set pageTitle = "Are you sure you want to delete this address? - Add a contact - DPS" %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}
  {% include 'partials/navigation.njk' %}
  {{ miniProfile(prisonerDetails) }}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <span class="govuk-caption-l">{{ caption }}</span>
      <h1 class="govuk-heading-l" data-qa="main-heading">{{ title }}</h1>

      {{ contactAddressCard({
        address: address,
        showActions: false
      }) }}

      <form method='POST'>
        <input type="hidden" name="_csrf" value="{{ csrfToken }}" />
        <div class="govuk-button-group">
          {{ govukButton({
            text: "Yes, delete",
            type: "submit",
            classes: 'govuk-!-margin-top-6 govuk-button--warning',
            attributes: {"data-qa": "continue-button"},
            preventDoubleClick: true
          }) }}
          {{ govukButton({
            text: "No, do not delete",
            type: "button",
            classes: 'govuk-!-margin-top-6 govuk-button--secondary',
            attributes: {"data-qa": "cancel-button"},
            href: navigation.cancelButton,
            preventDoubleClick: true
          }) }}
        </div>
      </form>
    </div>
  </div>

{% endblock %}
