{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}

{% set emailAddresses = '' %}
{% if contact.emailAddresses and contact.emailAddresses.length > 0 %}
    {% for item in contact.emailAddresses %}
        {% set emailAddresses = emailAddresses + '<p>' + item.emailAddress + '</p>' %}
    {% endfor %}
{% endif %}

{{ govukSummaryList({
    card: {
        title: {
            text: "Email addresses"
        }
    },
    rows: [{
        key: {
            text: "Email addresses"
        },
        value: {
            html: '<span data-qa=confirm-email-addresses-value>' + emailAddresses + '</span>'
        }
    }]
}) }}