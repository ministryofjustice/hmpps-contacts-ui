{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "partials/restrictionsTable.njk" import restrictionsTable %}

<div class="moj-page-header-actions">
  <div class="moj-page-header-actions__title">
    <h1 class="govuk-heading-l" data-qa="manage-contact-restrictions-title">Restrictions</h1>
  </div>
  <div class="moj-page-header-actions__actions">
    <div class="moj-button-group moj-button-group--inline">
       <a class="govuk-link govuk-link--no-visited-state" href="{{ "/prisoner/" + prisonerDetails.prisonerNumber + "/contacts/manage/" + contactId + "/relationship/" + prisonerContactId + "/edit-restrictions" }}">Add or update restrictions</a>
    </div>
  </div>
</div>

{{ restrictionsTable( {
  restrictionClass: 'PRISONER_CONTACT',
  restrictions: prisonerContactRestrictions,
  contact: contact,
  prisonerDetails: prisonerDetails,
  showActions: false
} ) }}

<hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">

{{ restrictionsTable( {
  restrictionClass: 'CONTACT_GLOBAL',
  restrictions: contactGlobalRestrictions,
  contact: contact,
  prisonerDetails: prisonerDetails,
  showActions: false
} ) }}
