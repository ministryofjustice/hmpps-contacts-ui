{
  "name": "hmpps-contacts-ui",
  "version": "0.0.1",
  "description": "Hmpps Contacts Ui",
  "repository": "git@github.com:ministryofjustice/hmpps-contacts-ui.git",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "watch-ts": "tsc -w",
    "build": "node esbuild/esbuild.config.js --build",
    "start": "node $NODE_OPTIONS dist/server.js | bunyan -o short",
    "watch-node": "DEBUG=gov-starter-server* nodemon -r dotenv/config --inspect --watch dist/ dist/server.js | bunyan -o short",
    "start:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js --build --watch\" \"npm run watch-node\"",
    "start-feature": "npx nyc instrument dist --nycrc-path ./.nycrc && export $(cat feature.env) && node $NODE_DEBUG_OPTION dist/server.js | bunyan -o short",
    "start-feature:dev": "concurrently -k -p \"[{name}]\" -n \"ESBuild,Node\" -c \"yellow.bold,cyan.bold\" \"node esbuild/esbuild.config.js  --build --watch \" \"node esbuild/esbuild.config.js --dev-test-server\"",
    "lint": "eslint . --cache --max-warnings 0",
    "lint-fix": "eslint . --cache --max-warnings 0 --fix",
    "typecheck": "tsc && tsc -p integration_tests",
    "test": "jest --forceExit --workerIdleMemoryLimit=500MB",
    "test:ci": "jest --runInBand --workerIdleMemoryLimit=500MB",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "int-test": "cypress run --config video=false",
    "int-test-ui": "cypress open --e2e --browser chrome",
    "clean": "rm -rf dist node_modules",
    "rebuild": "npm run clean && npm i && npm run build",
    "open-api": "npx openapi-typescript https://contacts-api-dev.hmpps.service.justice.gov.uk/v3/api-docs > ./server/@types/contactsApi/index.d.ts"
  },
  "engines": {
    "node": "^22",
    "npm": "^10"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
        }
      ]
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "server/**/*.{ts,js,jsx,mjs}"
    ],
    "coverageDirectory": "test_results/jest/",
    "coverageReporters": [
      "json",
      "lcov"
    ],
    "testMatch": [
      "<rootDir>/(server|job)/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ],
    "coveragePathIgnorePatterns": [
      ".*.test.ts",
      "node_modules",
      "server/@types",
      ".*jest.config.js",
      "server/app.ts",
      "server/index.ts",
      ".*.cy.ts"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      ".circleci/*",
      "migrations/*",
      "node_modules/*",
      "test/*",
      "integration_tests/*"
    ],
    "delay": 2500,
    "ext": "js,json,html,njk"
  },
  "lint-staged": {
    "*.{ts,js,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-sqs": "^3.826.0",
    "@cypress/code-coverage": "^3.14.4",
    "@ministryofjustice/frontend": "^5.1.3",
    "@ministryofjustice/hmpps-connect-dps-components": "^2.1.0",
    "@ministryofjustice/hmpps-monitoring": "^0.0.1-beta.2",
    "@sentry/node": "^9.28.0",
    "@types/cypress__code-coverage": "^3.10.2",
    "accessible-autocomplete": "^3.0.1",
    "agentkeepalive": "^4.6.0",
    "applicationinsights": "^2.9.6",
    "axe-core": "^4.10.3",
    "body-parser": "^2.2.0",
    "bunyan": "^1.8.15",
    "bunyan-format": "^0.2.1",
    "cheerio": "^1.1.0",
    "compression": "^1.8.0",
    "connect-flash": "^0.1.1",
    "connect-redis": "^9.0.0",
    "csrf-sync": "^4.2.1",
    "cypress-axe": "^1.6.0",
    "date-fns": "^4.1.0",
    "domhandler": "^5.0.3",
    "express": "^5.1.0",
    "express-session": "^1.18.1",
    "govuk-frontend": "^5.10.2",
    "helmet": "^8.1.0",
    "http-errors": "^2.0.0",
    "jwt-decode": "^4.0.0",
    "nocache": "^4.0.0",
    "nunjucks": "^3.2.4",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "redis": "^4.7.1",
    "reflect-metadata": "^0.2.2",
    "superagent": "^10.2.1",
    "uuid": "^11.1.0",
    "zod": "^3.25.61"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@jgoz/esbuild-plugin-typecheck": "^4.0.3",
    "@ministryofjustice/eslint-config-hmpps": "^0.0.1-beta.2",
    "@testing-library/cypress": "^10.0.3",
    "@tsconfig/node22": "^22.0.2",
    "@types/bunyan": "^1.8.11",
    "@types/bunyan-format": "^0.2.9",
    "@types/compression": "^1.8.1",
    "@types/connect-flash": "0.0.40",
    "@types/express-session": "^1.18.2",
    "@types/http-errors": "^2.0.5",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^22.15.31",
    "@types/nunjucks": "^3.2.6",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.4.17",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "audit-ci": "^7.1.0",
    "aws-sdk-client-mock": "^4.1.0",
    "cheerio": "^1.1.0",
    "chokidar": "^3.6.0",
    "concurrently": "^9.1.2",
    "cypress": "^14.4.1",
    "cypress-circleci-reporter": "^0.3.0",
    "cypress-multi-reporters": "^2.0.5",
    "dotenv": "^16.5.0",
    "esbuild": "^0.25.5",
    "esbuild-plugin-clean": "^1.0.1",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-manifest": "^1.0.5",
    "esbuild-sass-plugin": "^3.3.1",
    "glob": "^11.0.2",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-html-reporter": "^4.1.0",
    "jest-junit": "^16.0.0",
    "jsonwebtoken": "^9.0.2",
    "lint-staged": "^16.1.0",
    "mocha-junit-reporter": "^2.2.1",
    "nock": "^14.0.5",
    "nodemon": "^3.1.10",
    "nyc": "^17.1.0",
    "openapi-typescript": "^7.8.0",
    "prettier": "^3.5.3",
    "prettier-plugin-jinja-template": "^2.1.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3",
    "wait-on": "^8.0.3"
  },
  "overrides": {
    "@jgoz/esbuild-plugin-typecheck": {
      "esbuild": "$esbuild"
    }
  }
}
